<Window x:Class="SimpleLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLauncher"
        mc:Ignorable="d"
        PreviewKeyDown="Window_PreviewKeyDown"
        Closing="Window_Closing"
        Title="Simple Launcher" Height="450" Width="800">
    <DockPanel>
        <TextBox x:Name="PatternTextBox" Height="30" Margin="10" Text="{Binding Pattern, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Top"/>
        <ListBox x:Name="FilteredResultList" Margin="10" ItemsSource="{Binding FilteredResult}" SelectedItem="{Binding SelectedItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:HookedTextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
